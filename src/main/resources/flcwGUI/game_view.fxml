<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="flcwGUI.ChessGameFX">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- GridPane for the chessboard -->
            <GridPane fx:id="gameGrid" alignment="CENTER"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER">
            <!-- Left rotate button -->
            <Button text="Rotate Left" onAction="#rotateChessBoardLeft"/>

            <!-- Right rotate button -->
            <Button text="Rotate Right" onAction="#rotateChessBoardRight"/>
        </HBox>
    </bottom>
</BorderPane>
